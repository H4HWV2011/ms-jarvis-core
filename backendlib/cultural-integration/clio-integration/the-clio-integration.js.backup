        learningMetadata: this.createLearningMetadata(entry),
        source: 'The Clio Platform (Web Scraped)',
        url: entry.url,
        scrapedAt: entry.scrapedAt
      };

      formattedData[locationKey].historicalEntries.push(formattedEntry);
